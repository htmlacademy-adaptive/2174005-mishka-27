{
  "name": "mishka-27",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.4.0",
    "browser-sync": "2.27.7",
    "gulp": "4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-less": "5.0.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-rename": "^2.0.0",
    "postcss": "^8.4.19",
    "postcss-csso": "^6.0.1",
    "postcss-less": "^6.0.0",
    "stylelint": "^14.15.0",
    "stylelint-config-htmlacademy": "^1.1.3",
    "terser": "^5.16.1"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --custom-syntax postcss-less",
    "lint": "npm run editorconfig && npm run stylelint",
    "build": "gulp styles",
    "start": "npx gulp"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all",
    "not < 0.25%"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "^18"
  },
  "type": "module"
}
